<section class="selected-title">
  <h3>What's your goal?</h3>
  <p>Choose what benefits you'd like to get out of your space</p>
</section>

<div class="sidebar">
  <i class="one">&#9679;</i><br>
  <i class="two"></i>&#9675;<br>
  <i class="three"></i>&#9675;<br>
</div>

<section class="selected-form">
  <%= form_with url: "/benefits" do |form| %>
    <fieldset class="benefit-form">
      <div class="benefits-container">
        <h5 class="title">Practical</h5>
        <% @practical_benefits.order(:id).each do |benefit| %>
            <% unique_id = "benefit_#{benefit.id}" %>
            <%= check_box_tag 'selected_benefits[]', benefit.id, id: unique_id, class: 'checkbox' %>
            <%= label_tag unique_id, benefit.type_of_benefit %><br>
        <% end %>
      </div>

      <div class="benefits-container">
        <h5 class="title">Aesthetic</h5>
        <% @aesthetic_benefits.order(:id).each do |benefit| %>
            <% unique_id = "benefit_#{benefit.id}" %>
            <%= check_box_tag 'selected_benefits[]', benefit.id, id: unique_id, class: 'checkbox' %>
            <%= label_tag unique_id, benefit.type_of_benefit %><br>
        <% end %>
      </div>

      <div class="benefits-container">
        <h5 class="title">Health</h5>
        <% @health_benefits.order(:id).each do |benefit| %>
            <% unique_id = "benefit_#{benefit.id}" %>
            <%= check_box_tag 'selected_benefits[]', benefit.id, id: unique_id, class: 'checkbox' %>
            <%= label_tag unique_id, benefit.type_of_benefit %><br>
        <% end %>
      </div>

      <div class="benefits-container">
        <h5 class="title">Community</h5>
        <% @community_benefits.order(:type_of_benefit).each do |benefit| %>
            <% unique_id = "benefit_#{benefit.id}" %>
            <%= check_box_tag 'selected_benefits[]', benefit.id, id: unique_id, class: 'checkbox' %>
            <%= label_tag unique_id, benefit.type_of_benefit %><br>
        <% end %>
      </div>
    </fieldset>
    <%= submit_tag "Next", class: "button-purple selected-btn" %>
  <% end %>
</section>
