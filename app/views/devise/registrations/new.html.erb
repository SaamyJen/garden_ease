<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-container" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
     <%= f.input :first_name,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "first-name", class: "auth-input" },
                class: "input",
                placeholder: "Name..." %>
    <%= f.input :last_name,
                required: false,
                input_html: { autocomplete: "last-name", class: "auth-input" },
                class: "input",
                placeholder: "Last name..." %>
   <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "auth-input" },
                class: "input",
                placeholder: "garden@ease.com" %>
    <%= f.input :password,
                required: false,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: "auth-input" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password", class: "auth-input"} %>
  </div>



  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn button-purple"  %>
  </div>
  <div class="login-link" style="margin-top: 10px;">
    <a href="/users/sign_in" class="devise-links">Log in</a>
  </div>
<% end %>

