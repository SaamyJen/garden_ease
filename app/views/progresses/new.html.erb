<section class="progress-title">
  <h3>Keep track of your journey here!</h3>
</section>

<div class="progress-form-card">
  <div class="card-progress">
    <div class="form-card">
      <h5>New progress</h5>

      <%= simple_form_for([@project, @progress]) do |f| %>
        <div class="form-group">
          <%= f.input :description, label: false, placeholder: "Describe your progress..." %>
        </div>

        <div class="form-group">
          <%= f.input :photo, input_html: {class: 'd-none'}, label_html: {class: 'upload-photo'},
          label: 'ðŸ“¸  Upload a photo', required: false %>
          <%# <label for="photo-upload">Upload a Photo</label>
          <%= f.input :photo, label: false, input_html: {id: "photo-upload"} %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "Save progress", class: "button-purple" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
